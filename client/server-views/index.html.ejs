<!doctype html>
<html style="overflow-y: hidden;" dir="rtl" lang="he">
<head>
  <base href="/">

  <link rel='stylesheet' href='http://fonts.googleapis.com/css?family=Roboto:400,500,700,400italic'>
  <link rel='stylesheet' href='http://fonts.googleapis.com/earlyaccess/notosanshebrew.css'>
  <style>
    [ng-cloak] {
      display: none !important;
    }
  </style>
</head>
<body class="hebrew" layout="column" ng-cloak dir="rtl">


<md-toolbar>
  <div class="md-toolbar-tools">
    <a href="/doctors"><md-tooltip md-direction="left">
        עבור לדף הבית
      </md-tooltip>ישרא-דוק</a>
    <!-- fill up the space between left and right area -->
    <span flex></span>
    <div layout layout-align="center center" ng-controller="UserMenuController as ctrl">
      <md-menu layout layout-align="center center" ng-if="isAuthenticated()">
        <md-button style="padding: 4px 0 0 0;" class="md-icon-button" ng-click="ctrl.openMenu($mdOpenMenu, $event)">
          <md-tooltip md-direction="right">
פתח תפריט</md-tooltip>

            <img class="avatar" ng-src="{{user.avatarImageUrl}}?sz=32" md-menu-origin>

        </md-button>
        <md-menu-content>
          <md-menu-item>
            <md-button ng-click="ctrl.gotoProfile(user._id)" class="md-button">ערוך פרופיל משתמש</md-button>
          </md-menu-item>
          <md-menu-item>
            <md-button>נהל דפים</md-button>
          </md-menu-item>
          <md-menu-divider></md-menu-divider>
          <md-menu-item>
            <md-button ng-click="logout()">צא מהחשבון</md-button>
          </md-menu-item>
        </md-menu-content>
      </md-menu>
      <md-button class="md-icon-button" ng-if="!isAuthenticated()" ng-click="authenticate()">
        <md-tooltip md-direction="right">
          כניסה
        </md-tooltip>
        <md-icon>person</md-icon>
      </md-button>
    </div>
  </div>
</md-toolbar>
<md-content ng-class="{'view-progress-wrapper' : isViewLoadingSlow}" flex layout layout-padding>
  <div class="view-progress" ng-show="isViewLoadingSlow" layout layout-fill layout-align="center center">
    <md-progress-circular class="md-warn md-hue-1" md-diameter="96"></md-progress-circular>
  </div>
  <ng-view layout="column" layout-fill></ng-view>
</md-content>


<% if (env === 'production') { %>
<script src="main.min.js"></script>
<% }  else { %>
<script src="jspm_packages/system.js"></script>
<script src="config.js"></script>
<script>
  System.import('index');
</script>
<% } %>
</body>
</html>
